<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Lisitng</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
            <div class="valid-feedback">Title looks Good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>
        
        <div class="mb-3 col-md-4">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" enter type="file" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder=1200 class="form-control" required>
                <div class="invalid-feedback">Please Enter a valid Price</div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" type = "text" class="form-control" required>
                <div class="invalid-feedback">Please Enter a Valid Country</div> 
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Jaipur, Rajasthan" type= "text" class="form-control" required>
            <div class="invalid-feedback">Please Enter a Valid Location</div>
        </div>
        <br><br>
        <button class="btn btn-outline-danger">Add</button>
        <br><br>
    </form>
    </div>
</div>